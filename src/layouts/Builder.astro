---
import "@fontsource-variable/onest";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Enciclopedia de Wakfu" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta
      name="generator"
      content="Página de ayuda para jugadores de Wakfu en español proporcionando información sobre objetos del juego en español"
    />
    <meta name=“robots” content="index, follow, translate, ">
    <link rel="canonical" href="https://wakpedia.visamalog.com" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content="Constructor de equipamientos para personajes en Wakfu" />
    <meta property="og:image" content="/favicon.png" />
    <meta property="og:url" content="https://wakpedia.visamalog.com" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
    <script is:inline src="https://cdn.jsdelivr.net/npm/flowbite@3.0.0/dist/flowbite.min.js"></script>
  </body>
</html>

<style is:global>
  html {
    font-family: "Onest Variable", sans-serif;
  }

  body {
    background-color: #334;
    color: white;
  }

  main.builder {
    grid-template-areas: "stats items";
  }

  section.items {
    grid-template-areas: 
      "build"
      "filters"
      "results";
  }

  @media (prefers-color-scheme: light) {
    body {
      background-color: #bcd;
      color: #334;
    }
  }
</style>